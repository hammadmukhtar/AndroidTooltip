<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:layout_gravity="right">

    <ImageView
        android:id="@+id/tooltip_nav"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="@drawable/nav"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/marging_2x"
        android:background="@drawable/tooltip_bg">

        <TextView
        android:id="@+id/tooltip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/marging_2x"
        android:text="Tooltip Text"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_large" />

        <View
            android:layout_width="1dp"
            android:paddingTop="@dimen/marging_1x"
            android:paddingBottom="@dimen/marging_1x"
            android:layout_height="match_parent"
            android:background="@color/grey"
            />

        <TextView
            android:id="@+id/tooltip_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/marging_2x"
            android:text="Dismiss"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>


</LinearLayout>